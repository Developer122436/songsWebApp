@model SongsCreateListViewModel

@{
    ViewBag.Title = "Create Song Page";
    Layout = "_SecondLayout";
}

<form enctype="multipart/form-data" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Artist"></label>
        <div><span asp-validation-for="Artist" class="text-danger"></span></div>
        <input asp-for="Artist" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Country"></label>
        <div><span asp-validation-for="Country" class="text-danger"></span></div>
        <input asp-for="Country" class="form-control" />
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" type="file" class="form-control custom-file-input">
                <label class="custom-file-label">Choose photo with .jpg/.png/.gif extension</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Audio" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Audio" type="file" class="form-control custom-file-input">
                <label class="custom-file-label">Choose audio - must be with .mp3/.wav extension</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MusicStyle"></label>
        <div><span asp-validation-for="MusicStyle" class="text-danger"></span></div>
        <input asp-for="MusicStyle" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-danger">Cancel</a>
    </div>

</form>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}

