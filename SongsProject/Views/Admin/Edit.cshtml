@*It is specified strongly typed view - now we can check errors on compiler*@
@model SongEditViewModel

@{
    ViewBag.Title = "SongsProject - Edit Song Page";
    Layout = "_SecondLayout";
    var photoPath = Model.ExistingPhotoPath;
    var audioPath = Model.ExistingAudioPath;
}

<form enctype="multipart/form-data" asp-controller="Admin" asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input hidden asp-for="Id">
    <input hidden asp-for="ExistingPhotoPath" />
    <input hidden asp-for="ExistingAudioPath" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Artist"></label>
        <div><span asp-validation-for="Artist" class="text-danger"></span></div>
        <input asp-for="Artist" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Country"></label>
        <div><span asp-validation-for="Country" class="text-danger"></span></div>
        <input asp-for="Country" class="form-control" />
    </div>
    <label>Photo Song</label>
    <div class="form-group row col-sm-4">
        <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" type="file" class="form-control custom-file-input">
                <label class="custom-file-label">Change photo - must be with .jpg/.png/.gif extension</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-1 col-form-label">Player</label>
        <span class="col-sm-10">
            <audio controls>
                <source src="@Url.Content(audioPath)" type="audio/mp3" />
            </audio>
        </span>
    </div>
    <div class="form-group row">
        <label asp-for="Audio" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Audio" type="file" class="form-control custom-file-input">
                <label class="custom-file-label">Change audio - must be with .mp3/.wav extension</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="MusicStyle"></label>
        <div><span asp-validation-for="MusicStyle" class="text-danger"></span></div>
        <input asp-for="MusicStyle" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-danger">Cancel</a>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>

